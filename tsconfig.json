{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports":true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": false,
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src","src/*.json", "src/config/*.json"
  ]
}
